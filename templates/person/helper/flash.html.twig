<div class="container">
    <div class="row">
        <div class="col-lg-12">
            {% for type, messages in app.session.flashbag.all %}
                {%  for message in messages %}
                    {% if type == 'new' %}
                        <div class="alert alert-success" style="margin-top:30px" role="alert">
                            {{ message }}
                        </div>
                    {% elseif type == 'edit' %}
                       <div class="alert alert-warning" style="margin-top:30px" role="alert">
                            {{ message }}
                        </div>
                    {% else %}
                        <div class="alert alert-danger" style="margin-top:30px" role="alert">
                            {{ message }}
                        </div>
                    {% endif %}
                {%  endfor %}
            {%  endfor %}
        </di>
    </div>
</div>